<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyDataEntryApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25" >
            <Button
                x:Name="GoDataEntryPageBtn"
                Text="Data Entry" 
                SemanticProperties.Hint="Go to data entry page"
                Clicked="GoDataEntryPageBtn_Clicked"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" 
                FontSize="Title"
                BackgroundColor="#007BFF"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="200"
                CornerRadius="8"/>
            <Button
                x:Name="GoDownloadPageBtn"
                Text="PDF Download" 
                SemanticProperties.Hint="Go to data entry page"
                Clicked="GoDownloadPageBtn_Clicked"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                FontSize="Title"
                BackgroundColor="#007BFF"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="200"/>
            
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
