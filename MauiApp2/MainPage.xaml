<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyDataEntryApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button
                x:Name="GoDataEntryPageBtn"
                Text="Data entry" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="GoDataEntryPageBtn_Clicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="GoDownloadPageBtn"
                Text="PDF Download" 
                Clicked="GoDownloadPageBtn_Clicked"
                HorizontalOptions="Fill" />
            
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
